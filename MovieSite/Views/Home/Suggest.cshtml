@{
    ViewData["Title"] = "Suggest A Film";
}

@model MovieSite.Models.ApplicationResponse
<h1 class="display-3">@ViewData["Title"]</h1>

<p>Fill out this form to request a film to be added to the collection.</p>

<div>
    <form method="Post">
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" />
        <br />
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
        <br />
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" />
        <br />
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
        <br />
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />
        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="true">True</option>
            <option value="false">False</option>
        </select>
        <br />
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" />
        <br />
        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" />
        <br />
        <input class="btn btn-light" type="submit" value="Add Film Suggestion">

        <div asp-validation-summary="All"></div>
    </form>
</div>
